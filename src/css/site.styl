body
  margin 0
  text-rendering optimizeLegibility
  font-family: 'Open Sans', sans-serif;
  overflow-x hidden

.hidden
  display none

.wrapper
  background: linear-gradient(rgba(53,53,53,0.95), rgba(53,53,53,0.95)),
              rgba(53,53,53,0.95) url('../img/background_tops.png') no-repeat center;
  display flex
  align-items center
  justify-content center
  flex-direction column
  height 100%
  width 100%

.top
  display flex
  width 100%
  padding 0 4rem
  align-items center
  justify-content space-between
  flex 1

  img
    margin-left 4rem

  .social-icons
    height 6rem
    width 10rem
    display flex
    align-items center
    margin-right 4rem
    justify-content space-between

    span
      border-radius 50px
      width 3rem
      height 3rem
      display flex
      align-items center
      justify-content center
      background #2070CE

      &:first-child
        background 1px solid #4A90E2

      i
        font-size 1.5rem
        color #fff

.main
  width 100%
  display flex
  align-items center
  justify-content center
  margin-bottom 8rem

  .big-phone
    margin 4rem 14rem 0 0

  .intro
    width 40%
    p
      display inline-block
      color #fff
      font-weight 300
      font-size 1.5rem
      width 20rem

    .download-buttons div
      border-radius 2rem
      display inline-block
      width 10rem
      text-align center
      padding 1rem 0

      &.download-button
        border 1px solid #fff
        margin-right 2rem

      &.info-button
        background #387EF5

      a
        color #fff
        text-decoration none

.information
  display flex
  flex-direction column
  background #EFEFEF
  align-items center
  justify-content center

  .top
    margin-top 6rem
    width 50%
    flex-direction column

    h2
      color #387EF5
      flex 1
      font-weight 700

    p
      flex 1

  .first-info-phone,
  .second-info-phone
    flex-direction row
    width 50%
